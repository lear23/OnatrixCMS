@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "mainLayout.cshtml";
    ViewBag.Title = Model?.Value("pageTitle") ?? null;


}

<link rel="stylesheet" href="/css/contact.css">
<main>

    <section class="nextproject">
        @await Html.PartialAsync("static/NextProject")
    </section>

    <section class="contactSection">

        <div class="map-container">

            <div id="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d16188.303452309192!2d17.9347542!3d59.52412915!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ssv!2sse!4v1726908925282!5m2!1ssv!2sse"
                        width="100%" height="1200px" style="border:0;"
                        allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
        <div class="container contact">
           
            <h4>Request a call back</h4>
            <h1>Let us know about your <br> next project</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas consectetur, ligula semper sagittis lobortis, eros metus efficitur purus</p>

            <div class="form-container-contact">
                <div class="form-contact">
                    <div class="form-input-group">
                        <input id="name" name="name" type="text" placeholder="Name" class="form-input" />
                        <span class="form-input-error">You must enter your name</span>
                    </div>
                    <div class="form-input-group">
                        <input id="phone" name="phone" type="phone" placeholder="Phone Number" class="form-input" />
                        <span class="form-input-error">You must enter your name</span>
                    </div>
                </div>
                <div class="form-contact">
                    <div class="form-input-group">
                        <input id="email" name="email" type="email" placeholder="Email Address" class="form-input" />
                        <span class="form-input-error">You must enter your name</span>
                    </div>

                    <div class="form-input-group">
                        <select>
                            <option value="" disabled selected>Select a service</option>
                            <option value="service1">Service 1</option>
                            <option value="service2">Service 2</option>
                            <option value="service3">Service 3</option>
                            <option value="service4">Service 4</option>
                        </select>
                    </div>


                </div>

            </div>

            <button type="submit" class="form-button btn-primary">Submit</button>
        </div>


    </section>
     <section class="container logos">
        @await Html.PartialAsync("static/LogoBusiness")
    </section>

</main>


